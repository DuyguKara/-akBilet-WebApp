    <link rel="stylesheet" href="/styles/index.css">
    <link rel="stylesheet" href="/styles/event-detail.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100..700;1,100..700&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Sour+Gummy:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100..700;1,100..700&family=Sour+Gummy:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <!-- navbar section -->
    <%- include("partials/navbar.ejs") %>

    <% if (locals.errorMessage) { %>
        <script>
            alert("<%= errorMessage %>");
        </script>
    <% } %>

    <div class="event-grid-container">
        <div class="event-img-container"><img class="event-img" src="/uploads/<%= event.img %>"></div>
        <div class="event-flex">


            <h3><%= event.name %></h3>
            <p><%= event.content %></p>
            <ul>
                <li>
                    <img src="/assests/svgs/calendar4-event.svg" alt="calendar icon">
                    Date:&nbsp;<span><%= event.date %></span></li>
                <li>
                    <img src="/assests/svgs/geo-alt-fill.svg" alt="location icon">
                    Location:&nbsp;<span><%= event.location %></span></li>
            </ul>

            <div class="price">
                <h2>Price: <%= event.price %>$</h2>
            </div>

            <div class="price-flex">
                <button class="buy-button">Buy Now</button>
            </div>
        </div>
    </div>


    <div class="payment-modal">
        <div class="payment-modal-content">
            <span>&Chi;</span>
            <form action="/payment" method="post">
                <label for="card-number">Credit Card Number</label>
                <input type="text" id="card-number" name="card-number" maxlength="16" placeholder="xxxx xxxx xxxx xxxx" required>
                <label for="expiry-date">Last Date</label>
                <input type="text" id="expiry-date" name="expiry-date" placeholder="MM/YY" required>
                <label for="cvv">Security Code (CVV)</label>
                <input type="text" id="cvv" name="cvv" maxlength="3" placeholder="xxx" required>
                <label for="cardholder-name">Card Owner Name</label>
                <input type="text" id="cardholder-name" name="cardholder-name" placeholder="Full Name" required>
                <button class="payment-button" type="submit">Make The Payment</button>
            </form>
        </div>
    </div>

      <footer>&copy; 2024 November Duygu Kara</footer>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
      <script src="/event-detail.js"></script>
</body>
</html>